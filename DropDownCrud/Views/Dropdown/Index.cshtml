

<div class="container">
    <div class="row">
        <div class="col-10 offset-1">
            <div>
                <a class="btn btn-sm btn-primary mb-1" id="AddUser">Add User</a>
            </div>
            <div class="text-center">
                <h3 class="text-primary" id="tblNotification"></h3>
            </div>
            <table class="table table-bordered table-striped table-hover">
                <thead class="bg-dark text-light text-center">
                    <tr>
                        <th>User_ID</th>
                        <th>User Name</th>
                        <th>Email</th>
                        <th>Country</th>
                        <th>State</th>
                        <th>Distric</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody id="tblCascade" class="text-center"></tbody>
            </table>
        </div>
    </div>
</div>


<!-- The Modal -->
<div class="modal fade" id="Cascade_model">
    <div class="modal-dialog">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
                <h3 class="modal-title" id="header">Add User</h3>
                <button type="button" class="close btnClose" data-dismiss="modal">&times;</button>
            </div>

            <!-- Modal body -->
            <div class="modal-body">
                <form method="post" id="Cascade_form">
                    <div class="form-group">
                        <label>Name: </label>
                        <input type="text" class="form-control" name="Name" id="Name"/>
                        <input type="hidden" id="UserId"/>
                    </div>
                    <div class="form-group">
                        <label>Email: </label>
                        <input type="email" class="form-control" id="Email"/>
                    </div>
                    <div class="form-group">
                        <label>Country: </label>
                        <select id="Country" class="form-control">
                            <option>--Select Country--</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label>State: </label>
                        <select id="State" class="form-control">
                            <option>--Select State--</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label>City: </label>
                        <select id="Distric" class="form-control">
                            <option>--Select Distric--</option>
                        </select>
                    </div>
                </form>
            </div>

            <!-- Modal footer -->
            <div class="modal-footer">
                <input type="button" value="Save" class="btn btn-sm" id="btnSave" onclick="SaveUserData()">
                <input type="button" value="Close" class="btn btn-sm btn-danger btnClose" id="btnClose" data-dismiss="modal">

            </div>

        </div>
    </div>
</div>

@section scripts{
    <script src="~/js/Cascade.js"></script>
}